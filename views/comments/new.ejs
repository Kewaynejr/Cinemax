<% include ../partials/header %>
<div class="container outline">
        <h1 class="caption" style="text-align: center;">Add New Comment to "<%= movie.name %>"</h1>
        <div style= "width: 30%; margin: 40px auto;">
            <form action="/movies/<%= movie._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Insert your comment here">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-warning btn-block">Submit!</button>
                </div>
            </form>
            <a class="btn btn-outline-light btn-block" href="/movies">Go Back</a>
        </div>
</div>
<% include ../partials/footer %>
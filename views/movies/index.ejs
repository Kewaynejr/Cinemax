<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
            <h1>Cinemax</h1>
            <h4>Search movies, watch movies, enjoy movies, add movies!</h4>
            <p>
                <a class="btn btn-secondary btn-md" href="/login">Login</a>
                <a class="btn btn-warning btn-md" href="/movies/new">Add a New Movie</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3 class="glow">Our Most Popular Movies!</h3>
            <hr>
        </div>
    
        <% movies.forEach(function(movies){ %>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="card-body">
                    <img class="mi" src="<%= movies.image %>">
                    <div class="caption">
                        <h4><%= movies.name %></h4>
                    </div>
                    <p>
                        <a href="/movies/<%= movies._id %>" class="btn btn-outline-warning btn-sm btn-block">More Info</a>
                    </p>
                </div>
            </div> 
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
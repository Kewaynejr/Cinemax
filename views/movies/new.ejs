<% include ../partials/header %>
<div class="container outline">
        <h1 class="caption" style="text-align: center;">Add a New Movie</h1>
        <div style= "width: 30%; margin: 40px auto;">
            <form action="/movies" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name of movie">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-warning btn-block">Submit!</button>
                </div>
            </form>
            <a class="btn btn-xs btn-outline-light btn-block" href="/movies">Go Back</a>
        </div>
</div>
<% include ../partials/footer %>
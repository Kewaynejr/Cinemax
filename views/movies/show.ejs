<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Cinemax</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <img class="img-responsive mi" src="<%= movie.image %>">
                <div class="caption">
                    <h4 class="pull-right">$9.99/Full HD</h4>
                    <h4><a><%=movie.name%></a></h4>
                    <p><%= movie.description %></p>
                    <p><em> Movie Added By <%= movie.author.username %></em></p>
                    <% if(currentUser && movie.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning btn-xs" href="/movies/<%= movie._id %>/edit">Edit Movie Details</a>
                    <form id='delete-form' action="/movies/<%= movie._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger btn-xs">Delete This Movie</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="card-body">
                <div class="text-right">
                    <a class="btn btn-dark" href="/movies/<%= movie._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% movie.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">8 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>